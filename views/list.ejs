<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>

    <div class="box" id="heading">

        <h1>
            <%= listTitle %>
        </h1>

    </div>

    <div class="box">

        <% newListItem.forEach(function(items){%>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" class="largecheckbox" name="checkbox" value="<%= items._id %>" onchange="this.form.submit()"></input>
                 
                    <p>
                        <%=items.name%>
                    </p>
                </div>
<input type="hidden" name="listName" value="<%=listTitle %>">
            </form>
            <% })%>

                <form action="/" method="post">
                    <input type="text" name="item" id="" autofocus required placeholder="New item" autocomplete="off">
                    <button type="submit" name="List" value="<%= listTitle %>">+</button>
                </form>
    </div>
    <h2>
        R.P.S
    </h2>
</body>

</html>